<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateActivity">

    <Button
        android:id="@+id/button_prev_emoji_set_create"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="8dp"
        android:text="@string/lessthan"
        android:textSize="36sp"
        app:backgroundTint="#FF9800"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_emoji_5_create" />

    <EditText
        android:id="@+id/editText_english_translation_create"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:ems="10"
        android:hint="English "
        android:inputType="textEmailAddress"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText_emoji_translation_create"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="50dp"
        android:ems="10"
        android:hint="Emoji "
        android:inputType="textEmailAddress"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_english_translation_create" />

    <Button
        android:id="@+id/button_done_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="225dp"
        android:layout_marginTop="25dp"
        android:text="Done"
        android:textSize="24sp"
        app:backgroundTint="#FF9800"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_emoji_translation_create" />

    <Button
        android:id="@+id/button_next_emoji_set_create"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="60dp"
        android:text=">"
        android:textSize="36sp"
        app:backgroundTint="#FF9800"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_emoji_7_create" />

    <Button
        android:id="@+id/button_emoji_2_create"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="X"
        android:textSize="36sp"
        app:backgroundTint="#FF9800"
        app:layout_constraintStart_toEndOf="@+id/button_emoji_1_create"
        app:layout_constraintTop_toBottomOf="@+id/button_next_create" />

    <Button
        android:id="@+id/button_emoji_1_create"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="X"
        android:textSize="36sp"
        app:backgroundTint="#FF9800"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_next_create" />

    <Button
        android:id="@+id/button_emoji_3_create"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="X"
        android:textSize="36sp"
        app:backgroundTint="#FF9800"
        app:layout_constraintStart_toEndOf="@+id/button_emoji_2_create"
        app:layout_constraintTop_toBottomOf="@+id/button_done_create" />

    <Button
        android:id="@+id/button_emoji_4_create"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="X"
        android:textSize="36sp"
        app:backgroundTint="#FF9800"
        app:layout_constraintStart_toEndOf="@+id/button_emoji_3_create"
        app:layout_constraintTop_toBottomOf="@+id/button_done_create" />

    <Button
        android:id="@+id/button_emoji_5_create"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="X"
        android:textSize="36sp"
        app:backgroundTint="#FF9800"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_emoji_1_create" />

    <Button
        android:id="@+id/button_emoji_6_create"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="X"
        android:textSize="36sp"
        app:backgroundTint="#FF9800"
        app:layout_constraintStart_toEndOf="@+id/button_emoji_5_create"
        app:layout_constraintTop_toBottomOf="@+id/button_emoji_2_create" />

    <Button
        android:id="@+id/button_emoji_7_create"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="X"
        android:textSize="36sp"
        app:backgroundTint="#FF9800"
        app:layout_constraintStart_toEndOf="@+id/button_emoji_6_create"
        app:layout_constraintTop_toBottomOf="@+id/button_emoji_3_create" />

    <Button
        android:id="@+id/button_emoji_8_create"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="X"
        android:textSize="36sp"
        app:backgroundTint="#FF9800"
        app:layout_constraintStart_toEndOf="@+id/button_emoji_7_create"
        app:layout_constraintTop_toBottomOf="@+id/button_emoji_3_create" />

    <Button
        android:id="@+id/button_next_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="225dp"
        android:text="Next"
        android:textSize="24sp"
        app:backgroundTint="#FF9800"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_emoji_translation_create" />

</androidx.constraintlayout.widget.ConstraintLayout>